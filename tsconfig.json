{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",

    // "noUnusedLocals": false,
    "rootDir": "src",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
